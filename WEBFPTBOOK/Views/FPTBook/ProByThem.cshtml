@model IEnumerable<WEBFPTBOOK.Models.Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h3 style="text-align:center; color:red">BOOK BY THEME</h3> 

<div class="row">
    @foreach (var book in Model)
    {
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <a href="@Url.Action("Details","FPTBOOK", new { id = book.MaSach})">
                <img alt="@book.TenSach" src="~/product_imgs/@book.AnhBia" />
                <span>@book.TenSach</span>
            </a>
            <div class="ratings">
                <p class=" pull-right">15 reviews</p>
                <p>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                </p>
            </div>
        </div>
    </div>
    }
</div>
